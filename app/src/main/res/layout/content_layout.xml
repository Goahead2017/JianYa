<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <com.administrator.jianya.ViewPager.MyViewpager
        android:id="@+id/layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="80dp"
        android:layout_marginBottom="62dp"
        >

    </com.administrator.jianya.ViewPager.MyViewpager>

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="#598EEE">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="30dp">

            <ImageButton
                android:id="@+id/cebian"
                android:layout_width="0dp"
                android:layout_height="24dp"
                android:layout_weight="1"
                android:background="@drawable/celan"
                android:layout_gravity="center"
                android:layout_marginLeft="22dp"
                android:layout_marginStart="22dp" />

            <TextView
                android:id="@+id/title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="8"
                android:layout_gravity="center"
                android:gravity="center"
                android:textSize="20sp"
                android:textColor="#fff"
                />

            <ImageButton
                android:id="@+id/geren"
                android:layout_width="0dp"
                android:layout_height="36dp"
                android:layout_weight="1.2"
                android:background="@drawable/geren"
                android:layout_gravity="center"
                android:layout_marginRight="23dp"
                android:layout_marginEnd="23dp" />

        </LinearLayout>
    </android.support.v7.widget.Toolbar>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:src="@drawable/xiaohua_rect2"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="60dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/xiao"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginRight="0.3dp"
            android:src="@drawable/xiao_selected"
            android:layout_gravity="center"
            />

        <ImageView
            android:id="@+id/dong"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginRight="0.3dp"
            android:src="@drawable/dong_logo"
            android:layout_gravity="center"
            />

        <ImageView
            android:id="@+id/shuo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginRight="0.3dp"
            android:src="@drawable/shuo_logo"
            android:layout_gravity="center"
            />
    </LinearLayout>

</RelativeLayout>