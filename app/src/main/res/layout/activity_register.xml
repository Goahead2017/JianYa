<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_register">

    <LinearLayout
        android:id="@+id/register_user"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="3dp">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="7">
                <ImageView
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:src="@drawable/user" />
            </LinearLayout>
            <EditText
                android:id="@+id/user_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="43"
                android:background="@null"
                android:textSize="20sp"
                android:textColor="#ffffff"
                android:hint="请输入用户名"
                android:maxLength="10"
                android:singleLine="true"
                android:textColorHint="#C6CAD2"
                android:layout_marginLeft="12dp"
                android:textCursorDrawable="@drawable/edit_cursor_color"
                android:layout_marginStart="12dp" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#fffdfdfd"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/register_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="42dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="3dp">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="7">
                <ImageView
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:src="@drawable/password" />
            </LinearLayout>
            <EditText
                android:id="@+id/user_password"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="43"
                android:background="@null"
                android:textSize="20sp"
                android:textColor="#ffffff"
                android:hint="请输入密码"
                android:password="true"
                android:maxLength="16"
                android:singleLine="true"
                android:textColorHint="#C6CAD2"
                android:layout_marginLeft="12dp"
                android:textCursorDrawable="@drawable/edit_cursor_color"
                android:layout_marginStart="12dp" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#fffdfdfd"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/register_re_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="42dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="3dp">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="7">
                <ImageView
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:src="@drawable/password" />
            </LinearLayout>
            <EditText
                android:id="@+id/user_re_password"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="43"
                android:background="@null"
                android:textSize="20sp"
                android:textColor="#ffffff"
                android:hint="请确认密码"
                android:password="true"
                android:maxLength="16"
                android:singleLine="true"
                android:textColorHint="#C6CAD2"
                android:layout_marginLeft="12dp"
                android:textCursorDrawable="@drawable/edit_cursor_color"
                android:layout_marginStart="12dp" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#fffdfdfd"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/register_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="42dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="3dp">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="7">
                <ImageView
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:src="@drawable/email" />
            </LinearLayout>
            <EditText
                android:id="@+id/user_mail"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="43"
                android:background="@null"
                android:textSize="20sp"
                android:textColor="#ffffff"
                android:hint="请输入邮箱地址"
                android:maxLength="20"
                android:singleLine="true"
                android:textColorHint="#C6CAD2"
                android:layout_marginLeft="12dp"
                android:textCursorDrawable="@drawable/edit_cursor_color"
                android:layout_marginStart="12dp" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#fffdfdfd"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/register_yz_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="42dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="31dp"
                android:layout_weight="7"
                android:background="@drawable/line">
                <ImageView
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:src="@drawable/yz_email"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="31dp"
                android:layout_weight="27"
                android:background="@drawable/line">
                <EditText
                    android:id="@+id/user_yz"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                   android:background="@null"
                    android:textSize="20sp"
                    android:textColor="#ffffff"
                    android:hint="请输入验证码"
                    android:maxLength="5"
                    android:singleLine="true"
                    android:textColorHint="#C6CAD2"
                    android:layout_marginLeft="12dp"
                    android:textCursorDrawable="@drawable/edit_cursor_color"
                    android:layout_marginStart="12dp" />
            </LinearLayout>
            <TextView
                android:id="@+id/bt_getYz"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="16"
                android:textSize="16sp"
                android:textColor="#ffffff"
                android:text="获取验证码"
                android:gravity="center"
                android:padding="5dp"
                android:layout_marginLeft="12dp"
                android:textCursorDrawable="@drawable/edit_cursor_color"
                android:layout_marginStart="12dp"
                android:layout_marginBottom="3dp"
                android:background="@drawable/button_register"/>
        </LinearLayout>
        <!--<View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#fffdfdfd"/>-->
    </LinearLayout>

    <Button
        android:id="@+id/bt_register"
        android:layout_width="170dp"
        android:layout_height="43dp"
        android:background="@drawable/button_login"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="58dp"
        android:text="注册"
        android:textColor="#214ED1"
        android:textSize="20sp"/>

</LinearLayout>