<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="57dp"
        android:background="@drawable/cr_background">
        <ImageView
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:src="@drawable/cr_arrow"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="找回密码"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:layout_centerInParent="true"/>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/correct_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="6dp">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="5">
                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="22dp"
                    android:src="@drawable/cr_email"
                    android:paddingStart="5dp"
                    android:paddingLeft="5dp"
                    android:paddingRight="0dp"
                    android:paddingEnd="0dp" />
            </LinearLayout>
            <EditText
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="43"
                android:background="@null"
                android:textSize="16sp"
                android:textColor="#598eee"
                android:hint="请输入邮箱"
                android:maxLength="20"
                android:singleLine="true"
                android:textColorHint="#C6CAD2"
                android:layout_marginLeft="12dp"
                android:textCursorDrawable="@drawable/correct_cursor_color"
                android:layout_marginStart="12dp" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#D1DFF8"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/correct_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="5dp">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="5">
                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="28dp"
                    android:src="@drawable/cr_password"
                    android:paddingStart="5dp"
                    android:paddingLeft="5dp"
                    android:paddingRight="0dp"
                    android:paddingEnd="0dp"/>
            </LinearLayout>
            <EditText
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="43"
                android:background="@null"
                android:textSize="16sp"
                android:textColor="#598eee"
                android:hint="请输入新密码"
                android:maxLength="16"
                android:singleLine="true"
                android:textColorHint="#C6CAD2"
                android:password="true"
                android:layout_marginLeft="12dp"
                android:textCursorDrawable="@drawable/correct_cursor_color"
                android:layout_marginStart="12dp"
                android:layout_marginTop="5dp"/>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#D1DFF8"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/correct_re_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="5dp">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3">
                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="28dp"
                    android:paddingStart="5dp"
                    android:paddingLeft="5dp"
                    android:paddingRight="0dp"
                    android:paddingEnd="0dp"/>
            </LinearLayout>
            <EditText
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="43"
                android:background="@null"
                android:textSize="16sp"
                android:textColor="#598eee"
                android:hint="请确认新密码"
                android:password="true"
                android:maxLength="16"
                android:singleLine="true"
                android:textColorHint="#C6CAD2"
                android:layout_marginLeft="12dp"
                android:textCursorDrawable="@drawable/correct_cursor_color"
                android:layout_marginStart="12dp"
                android:layout_marginTop="5dp"/>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#D1DFF8"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/correct_yz"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="5dp">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="5">
                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="23dp"
                    android:src="@drawable/yz_email"
                    android:paddingStart="5dp"
                    android:paddingLeft="5dp"
                    android:paddingRight="0dp"
                    android:paddingEnd="0dp"/>
            </LinearLayout>
            <EditText
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="23"
                android:background="@null"
                android:textSize="16sp"
                android:textColor="#598eee"
                android:hint="请输入验证码"
                android:maxLength="4"
                android:singleLine="true"
                android:textColorHint="#C6CAD2"
                android:layout_marginLeft="12dp"
                android:textCursorDrawable="@drawable/correct_cursor_color"
                android:layout_marginStart="12dp"
                android:layout_marginTop="1dp"/>
            <TextView
                android:id="@+id/get_yz"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="20"
                android:text="免费获取验证码"
                android:textSize="16sp"
                android:layout_marginTop="1dp"
                android:textColor="#598EEE" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#D1DFF8"/>
    </LinearLayout>

    <Button
        android:id="@+id/cr_button"
        android:layout_width="170dp"
        android:layout_height="43dp"
        android:background="@drawable/button_correct"
        android:layout_gravity="center_horizontal"
        android:text="完成"
        android:textSize="20sp"
        android:textColor="#FFFFFF"/>

</LinearLayout>
